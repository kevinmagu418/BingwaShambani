{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,

    /* optional but tidy */
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
"include": ["src/**/*"],
  "exclude": ["node_modules"]
}
